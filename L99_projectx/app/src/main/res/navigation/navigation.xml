<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"

    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.projectx.TitleFragment"
        tools:layout="@layout/fragment_title"
        android:label="TitleFragment" >
        <action
            android:id="@+id/action_titleFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.projectx.AboutFragment"
        tools:layout="@layout/fragment_about"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.projectx.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_about"
        android:label="DashboardFragment" />
</navigation>